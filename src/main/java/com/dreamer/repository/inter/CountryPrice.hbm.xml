<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.dreamer.domain.inter">
    <class name="CountryPrice" table="country_price">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="native"></generator>
        </id>

        <many-to-one name="goods" class="com.dreamer.domain.mall.goods.Goods">
            <column name="goods">
                <comment>产品</comment>
            </column>
        </many-to-one>

        <property name="img" type="java.lang.String">
            <column name="img">
                <comment>图片</comment>
            </column>
        </property>
        
        <property name="open" type="java.lang.Integer">
            <column name="open" not-null="true">
                <comment>是否可以打开</comment>
            </column>
        </property>

        <many-to-one name="country" class="Country">
            <column name="country">
                <comment>国家</comment>
            </column>
        </many-to-one>

        <property name="price" type="java.lang.Double">
            <column name="price">
                <comment>价格</comment>
            </column>
        </property>

        <property name="profit" type="java.lang.Double">
            <column name="profit">
                <comment>利润</comment>
            </column>
        </property>

    </class>
</hibernate-mapping>
